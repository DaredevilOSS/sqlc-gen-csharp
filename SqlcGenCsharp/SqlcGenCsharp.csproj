<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>.net8.0</TargetFramework>
        <RootNamespace>sqlc_gen_csharp</RootNamespace>
        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>true</SelfContained>
        <Nullable>enable</Nullable>
        <LangVersion>default</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\CodegenProtobuf\CodegenProtobuf.csproj"/>
        <ProjectReference Include="..\SourceGenerator\SourceGenerator.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Google.Protobuf" Version="3.26.0-rc2"/>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.9.0.0" PrivateAssets="all"/>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4" PrivateAssets="all"/>
        <PackageReference Include="protobuf-net" Version="3.2.30"/>
        <PackageReference Include="Wasi.Sdk" Version="0.1.4-preview.10020"/>
    </ItemGroup>

</Project>
